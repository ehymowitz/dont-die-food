<div class="container">
  <div class="text-center">
    <h1>Dairy</h1>
    <br>
  </div>

  <div class="cards">
    <% @food_trades.shuffle.each do |food_trade| %>
      <div class="small-food-card">
        <%= image_tag("#{food_trade.user_owned_ingredient.ingredient.photo}", width: "100%", height: "70%", alt: "#{food_trade.user_owned_ingredient.ingredient.photo}", class: "recipe-image") %>
        <p class="small-card-title"><%= link_to food_trade.user_owned_ingredient.ingredient.name.capitalize, food_trade_path(food_trade) %></p>
      </div>
    <% end %>
  </div>
</div>
