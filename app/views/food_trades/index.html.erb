<div class="container">
  <h1 style="text-align:center">Community</h1>
  <br>

  <div class="d-flex justify-content-center">
    <%= link_to "Add your own giveaway", new_food_trade_path, class: "btn button-dark"%>
  </div>

  <br>
  <br>

  <div id="map"
   style="width: 100%; height: 400px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_APIKEY'] %>"></div>
  <br>
</div>

<div class="food-card-carousel carousel-card-container">
  <div class="container">
    <div class="carousel-title">
      <div class="d-flex justify-content-between">
        <h2>Fruits</h2>
          <%= link_to "See more", food_trades_fruits_path, class: "more"  %>
      </div>
    </div>
  </div>

  <div class="cards-carousel">
    <% @food_trades.where(category: "Fruits").shuffle.last(10).each do |food_trade| %>
      <div class="carousel-card">
        <%= image_tag("#{food_trade.user_owned_ingredient.ingredient.photo}", size:"150x90", alt: "#{food_trade.user_owned_ingredient.ingredient.photo}", class: "recipe-image") %>
        <p class="carousel-card-title"><%= link_to food_trade.user_owned_ingredient.ingredient.name.capitalize, food_trade_path(food_trade) %></p>
      </div>
    <% end %>
  </div>
</div>

