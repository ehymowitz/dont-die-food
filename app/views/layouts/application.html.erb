<!DOCTYPE html>
<html>
  <head>
    <title>Don't Die Food</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <link rel="icon" type="image/png" href="https://cdn4.iconfinder.com/data/icons/avatars-xmas-giveaway/128/avocado_scream_avatar_food-512.png">
  </head>

  <body onload="myFunction()">
    <%# Navbar %>
    <% if user_signed_in? %>
      <%= render 'shared/navbar_user' %>
    <% else%>
      <%= render 'shared/navbar_visitor' %>
    <% end %>
    
    <%= render 'shared/spinning-eggplant' %>
    
    <div class="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <!-- adding padding-bottom on all pages to avoid btm navbar -->
    <div class="content" id="main-content">
      <%= yield %>
    </div>

    
    <%= render 'shared/btm_navbar' %>

    <script>
      let eggplant = document.getElementById("eggplant")
      let main = document.getElementById("main-content")

      function myFunction() {
        setTimeout(showPage, 800);
      }

      function showPage() {
        eggplant.style.display = "none";
        main.style.display = "block";
      }
    </script>

  </body>
</html>
