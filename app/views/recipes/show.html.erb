<div class="container my-5">
  <%# Recipe title %>
  <div class="curved-recipe-card">
    <%= image_tag("#{@recipe.photo}", size:"500x400", alt: "Recipe image", class: "recipe_show_img") %><br>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="$f-lightgrey" fill-opacity="1"
      d="M0,128L80,112C160,96,320,64,480,80C640,96,800,160,960,165.3C1120,171,1280,117,1360,90.7L1440,64L1440,
      320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"></path>
    </svg>
  </div>

  <h1><%= @recipe.title %></h1>

  <br>

  <br>

  <%# Ingredients %>
  <p><strong>You will need</strong></p>
  <ul>
  <% @recipe.ingredients_data.each do |ingredient_data| %>
    <%# Do a condition to round amount %>
    <li><strong><%= ingredient_data["measures"]["metric"]["amount"] %>
    <%= ingredient_data["measures"]["metric"]["unitLong"] %></strong>
    <%= ingredient_data["name"] %></li>
  <% end %>
  </ul>
  <br>

  <%# Instructions %>
  <p><strong>Directions</strong></p>
  <ul>
  <% @recipe.steps_data.each do |step_data| %>
    <li><strong><%= step_data["number"] %></strong>
    <%= step_data["step"]%>
    </li>
  <% end %>
  </ul>
</div>
